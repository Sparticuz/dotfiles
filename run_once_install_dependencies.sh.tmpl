#!/bin/bash
{{ if eq .chezmoi.os "linux" -}}
  {{ if (.chezmoi.kernel.osrelease | lower | contains "arch") }}
    sudo pacman -Sy git keychain nano-syntax-highlighting
    # Install aura
    cd /tmp
    git clone https://aur.archlinux.org/aura-bin.git
    cd aura-bin
    makepkg -s
    sudo pacman -U aura-bin-*
  {{ else }}
    # TODO install nano-syntax-highlighting from Github on Ubuntu and others
    # to /usr/share/nano-syntax-highlighting
    sudo apt install -y keychain
  {{ end }}
{{ end }}

