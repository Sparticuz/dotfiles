#!/bin/bash
{{ if eq .chezmoi.os "linux" -}}
  {{ if (.chezmoi.kernel.osrelease | lower | contains "arch") }}
    sudo pacman -Sy git keychain
    # Install aura
    cd /tmp
    git clone https://aur.archlinux.org/aura-bin.git
    cd aura-bin
    makepkg -s
    sudo pacman -Uy aura-bin-*
    sudo aura -Ay nano-syntax-highlighting-git
    # install nano-syntax-highlighting-git from aur
  {{ end }}
  # install nano-syntax-highlighting from Github on Ubuntu and others
  # to /usr/share/nano-syntax-highlighting
  sudo apt install -y keychain
{{ end }}

